<html>
  <head>
    <%= stylesheet_link_tag "ui-lightness/jquery-ui-1.8.6.custom" %>
    <style type="text/css">
      /* css for timepicker */
      .ui-timepicker-div .ui-widget-header{ margin-bottom: 8px; }
      .ui-timepicker-div dl{ text-align: left; }
      .ui-timepicker-div dl dt{ height: 25px; }
      .ui-timepicker-div dl dd{ margin: -25px 0 10px 65px; }
      .ui-timepicker-div td { font-size: 90%; }
    </style>
    <%= javascript_include_tag "jquery-1.4.4.min" %>
    <%= javascript_include_tag "jquery-ui-1.8.6.custom.min" %>
    <%= javascript_include_tag "jquery-ui-timepicker-addon" %>
    <script type="text/javascript">
      $(function() {
          $('#start_date').datetimepicker();
          $('#start_date').datetimepicker("setDate", new Date(<%= @event.start.to_i * 1000 %>));
          $('#start_date').datetimepicker({ dateFormat: 'yyyy-mm-dd' })
          $('#end_date').datetimepicker();
          $('#end_date').datetimepicker("setDate", new Date(<%= @event.end.to_i * 1000 %>));
          });
    </script>
  </head>
  <body>
    <form action="<%= branch_event_path(@branch, @event) %>" method="post">
      <input type="hidden" name="_method" value="put"/>
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>"/>
      <%= select(:event, :purpose, @purposes.map { |purpose_set| [ purpose_set.values[0], purpose_set.keys[0] ]}) %>
      <p/>
      <input type="text" name="event[start]" id="start_date"/></p>
      <input type="text" name="event[end]" id="end_date"/></p>
      <input type="submit" value="Save"/>
    </form>
  </body>
</html>
