<%= form_for([@branch, @member || Member.new]) do |f| %>
<%= f.label :first_name %>
<%= f.text_field :first_name %>
<p/>
<%= f.label :surname %>
<%= f.text_field :surname %>
<p/>

<%= f.label :card_number %>
<%= f.text_field :card_number %>
<p/>

<%= f.label :gender %>
<%= f.text_field :gender %>
<p/>

<%= f.label :date_of_birth %>
<%= f.text_field :date_of_birth %>
<p/>

<%= f.label :mobile_number %>
<%= f.text_field :mobile_number %>
<p/>

<%= f.label :parent_guardian_number, "Parent/Guardian Number" %>
<%= f.text_field :parent_guardian_number %>
<p/>

<%= f.label :disabilities %>
