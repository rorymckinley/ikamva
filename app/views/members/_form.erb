<%= f.label :address %>
<%= f.text_field :address %>
<p/>

<%= f.label :grade %>
<%= f.text_field :grade %>
<p/>

<%= f.label :school %>
<%= f.text_field :school %>
<p/>

<%= f.label :email %>
<%= f.text_field :email %>
<p/>

<%= f.label :id_number %>
<%= f.text_field :id_number %>
<p/>

<%= f.label :citizenship %>
<%= f.text_field :citizenship %>
<p/>

<%= f.label :parent_guardian_1_relationship, "Relationship of First Parent/Guardian" %>
<%= f.text_field :parent_guardian_1_relationship %>
<p/>

<%= f.label :parent_guardian_2_relationship, "Relationship of Second Parent/Guardian" %>
<%= f.text_field :parent_guardian_2_relationship %>
