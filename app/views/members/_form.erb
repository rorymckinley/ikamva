<%= form_for([@branch, @member || Member.new]) do |f| %>
<%= f.label :first_name %>
<%= f.text_field :first_name %>
<p/>
<%= f.label :surname %>
<%= f.text_field :surname %>
<p/>

<%= f.label :card_number %>
<%= f.text_field :card_number %>
<p/>

<%= f.label :gender %>
<%= f.text_field :gender %>
<p/>

<%= f.label :mobile_number %>
<%= f.text_field :mobile_number %>
<p/>

<%= f.label :telephone_number %>
<%= f.text_field :telephone_number %>
<p/>

<%= f.label :address %>
<%= f.text_field :address %>
<p/>

<%= f.label :email %>
<%= f.text_field :email %>
<p/>

<%= f.label :id_number %>
<%= f.text_field :id_number %>
<p/>

<%= f.label :grade %>
<%= f.text_field :grade %>
<p/>

<%= f.label :registration_date %>
<%= f.text_field :registration_date, :id => "registration_date" %>
<p/>

<%= f.label :participation %>
<%= f.select :participation, @participation_types.map { |type_set| type_set.to_a[0].reverse } %>
<p/>

<%= submit_tag %>
<% end %>
